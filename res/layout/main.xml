<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_margin="16dp"
		android:gravity="center_horizontal"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		>
		<Switch
				android:id="@+id/switchButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:checked="false"
				android:layout_marginTop="30dp"/>


		<TimePicker
				android:id="@+id/timePicker"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal"
				android:gravity="center_horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView android:id="@+id/timePicker_label" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:text="frequency"/>
				<Spinner
						android:id="@+id/timeFrequencySpinner"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:spinnerMode="dialog"
						android:entries="@array/time_freq_array"
						android:prompt="@string/time_freq_prompt"/>
		</LinearLayout>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal"
				android:gravity="center_horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView android:id="@+id/timePicker_label" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:text="duration"/>
				<Spinner
						android:id="@+id/timeDurationSpinner"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:spinnerMode="dialog"
						android:label="label"
						android:entries="@array/time_duration_array"
						android:prompt="@string/time_duration_prompt"/>
		</LinearLayout>

</LinearLayout>

